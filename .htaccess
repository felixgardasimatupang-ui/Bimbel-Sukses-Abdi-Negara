# ============================================
# Bimbel Abdi Negara - Advanced Security Rules
# ============================================

# Disable directory listing
Options -Indexes

# Disable server signature
ServerSignature Off

# Disable trace HTTP request
TraceEnable Off

# ============================================
# Security Headers
# ============================================

<IfModule mod_headers.c>
    # Prevent clickjacking
    Header always set X-Frame-Options "DENY"
    
    # Prevent MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # XSS Protection (legacy but still useful)
    Header always set X-XSS-Protection "1; mode=block"
    
    # Control referrer information
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Control DNS prefetching
    Header always set X-DNS-Prefetch-Control "off"
    
    # Permissions policy
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=()"
    
    # Content Security Policy - Adjust based on your needs
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self'; frame-ancestors 'none';"
    
    # Strict Transport Security (requires HTTPS)
    # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Remove powered-by header
    Header always unset X-Powered-By
</IfModule>

# ============================================
# Block Access to Sensitive Files
# ============================================

<FilesMatch "\.(env|log|txt|md|yml|yaml|json|xml|ini|conf|sql|sqlite|db)$">
    Order deny,allow
    Deny from all
</FilesMatch>

# Block access to hidden files (except .htaccess)
<FilesMatch "^\.(?!htaccess)">
    Order deny,allow
    Deny from all
</FilesMatch>

# Protect .htaccess itself
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

# ============================================
# Prevent SQL Injection & XSS
# ============================================

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Block SQL Injection attempts
    RewriteCond %{QUERY_STRING} (\%27)|(\')|(\-\-)|(\%23)|(#) [OR]
    RewriteCond %{QUERY_STRING} (union|select|insert|update|delete|drop|alter|create|truncate|exec|xp_)\s [OR]
    RewriteCond %{QUERY_STRING} (\.\.\/|\.\.%2f|%2e%2e%2f) [OR]
    RewriteCond %{QUERY_STRING} (javascript|vbscript|onload|onerror|onclick|onmouse) [OR]
    RewriteCond %{QUERY_STRING} (<script>|</script>) [OR]
    RewriteCond %{QUERY_STRING} base64_encode [OR]
    RewriteCond %{QUERY_STRING} concat%28 [OR]
    RewriteCond %{QUERY_STRING} union%20all%20select
    
    # Return 403 Forbidden
    RewriteRule ^.*$ - [F,L]
</IfModule>

# ============================================
# Block Suspicious User Agents
# ============================================

<IfModule mod_setenvif.c>
    # Block bad bots and scrapers
    SetEnvIfNoCase User-Agent "^Wget" bad_bot
    SetEnvIfNoCase User-Agent "^curl" bad_bot
    SetEnvIfNoCase User-Agent "^python" bad_bot
    SetEnvIfNoCase User-Agent "^java/" bad_bot
    SetEnvIfNoCase User-Agent "^libwww" bad_bot
    SetEnvIfNoCase User-Agent "^lwp" bad_bot
    SetEnvIfNoCase User-Agent "^bot" bad_bot
    SetEnvIfNoCase User-Agent "^spider" bad_bot
    SetEnvIfNoCase User-Agent "^crawler" bad_bot
    SetEnvIfNoCase User-Agent "^scan" bad_bot
    SetEnvIfNoCase User-Agent "^scan" bad_bot
    SetEnvIfNoCase User-Agent "^grabber" bad_bot
    SetEnvIfNoCase User-Agent "^download" bad_bot
    SetEnvIfNoCase User-Agent "^framework" bad_bot
    
    <Limit GET POST PUT DELETE HEAD OPTIONS>
        Order Allow,Deny
        Allow from all
        Deny from env=bad_bot
    </Limit>
</IfModule>

